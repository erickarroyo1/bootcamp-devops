pipeline {
    agent any

    stages {
        stage('AWS VALIDATE ACCESS') {
            steps {
                echo 'AWS STS'
                withAWS(credentials: 'aws_tlz_account', region: 'eu-west-1') {
                    sh 'aws sts get-caller-identity'
                }                
            }
        }
        stage('AWS S3 listar') {
            steps {
                withAWS(credentials: 'aws_tlz_account', region: 'eu-west-1'){
                    sh 'aws s3 ls'
                }                
            }
        } 
        stage('Git Clone') {
            steps {
                sh 'rm -rf bootcamp-devops'
                sh 'git clone https://github.com/erickarroyo1/bootcamp-devops.git'
                sh 'ls -lrt bootcamp-devops/Fase2-Cloud/Terraform-CICD-S3-Dynamo-Automation-Desafio3/lambda-python-resources'
            }
        }       
        stage('Upload to S3') {
            steps {
                 withAWS(credentials: 'aws_tlz_account', region: 'eu-west-1') {
                    sh 'cd bootcamp-devops/Fase2-Cloud/Terraform-CICD-S3-Dynamo-Automation-Desafio3/lambda-python-resources'
                    sh 'zip -r function.zip function.py'
                    sh 'aws s3 cp bootcamp-devops/Fase2-Cloud/Terraform-CICD-S3-Dynamo-Automation-Desafio3/lambda-python-resources/function.zip s3://erick-code-backend-bucket --recursive'
                 }
            }
        }   
    }
}