pipeline {
    agent any
    environment{
        FUNCTION_NAME="educacionit_s3toDynamonCSVImport"
        BUCKETS3="erick-code-backend-bucket"
        ZIP="function.zip"
        CODE="function.py"
    }

    stages {
        stage('AWS VALIDATE ACCESS') {
            steps {
                echo 'AWS STS'
                withAWS(credentials: 'aws_tlz_account', region: 'eu-west-1') {
                    sh 'aws sts get-caller-identity'
                }                
            }
        }
        stage('AWS S3 listar') {
            steps {
                withAWS(credentials: 'aws_tlz_account', region: 'eu-west-1'){
                    sh 'aws s3 ls'
                }                
            }
        } 
        stage('Git Clone') {
            steps {
                sh 'rm -rf bootcamp-devops'
                sh 'git clone https://github.com/erickarroyo1/bootcamp-devops.git'
                sh 'ls -lrt bootcamp-devops/Fase2-Cloud/Terraform-CICD-S3-Dynamo-Automation-Desafio3/lambda-python-resources'
            }
        }       
        stage('Upload function to S3') {
            steps {
                 withAWS(credentials: 'aws_tlz_account', region: 'eu-west-1') {
                    sh 'zip -r bootcamp-devops/Fase2-Cloud/Terraform-CICD-S3-Dynamo-Automation-Desafio3/lambda-python-resources/function.zip bootcamp-devops/Fase2-Cloud/Terraform-CICD-S3-Dynamo-Automation-Desafio3/lambda-python-resources/function.py'
                    sh 'ls -lrt bootcamp-devops/Fase2-Cloud/Terraform-CICD-S3-Dynamo-Automation-Desafio3/lambda-python-resources'
                    sh 'aws s3 cp bootcamp-devops/Fase2-Cloud/Terraform-CICD-S3-Dynamo-Automation-Desafio3/lambda-python-resources/function.zip s3://erick-code-backend-bucket'
                 }
            }
        } 
        stage('Deploy to Lambda') {
            steps {
                withAWS(credentials: 'aws_tlz_account', region: 'eu-west-1') {
                sh 'aws lambda update-function-code --function-name $FUNCTION_NAME --s3-bucket ${BUCKETS3} --s3-key $ZIP --publish'    
                }
            }
                
            }
        }     
    }
}
